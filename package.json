{
  "name": "meeting-ai-assistant",
  "version": "1.0.0",
  "description": "Real-time AI-powered meeting suggestion system",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win --x64",
    "build:win:portable": "electron-builder --win portable --x64",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:linux": "electron-builder --linux --x64",
    "build:appimage": "electron-builder --linux AppImage",
    "build:rpm": "electron-builder --linux rpm",
    "build:fedora": "electron-builder --linux rpm --x64",
    "build:dir": "electron-builder --linux dir",
    "electron:build:all": "electron-builder --win --mac --linux",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ai",
    "meeting",
    "whisper",
    "chatgpt",
    "real-time",
    "websocket"
  ],
  "author": {
    "name": "Faiq Ahmad",
    "email": "faiqa5122@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "compression": "*",
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "helmet": "*",
    "openai": "*",
    "pdfkit": "^0.17.2",
    "socket.io": "*",
    "winston": "*"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.meetingai.assistant",
    "productName": "Meeting AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/**/*",
      "src/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "meetings",
        "to": "meetings",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "exports",
        "to": "exports",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "public/icon.png",
      "category": "Office",
      "maintainer": "Faiq Ahmad <faiqa5122@gmail.com>",
      "vendor": "Faiq Ahmad",
      "synopsis": "Real-time AI-powered meeting suggestion system",
      "description": "Meeting AI Assistant provides real-time AI-powered suggestions during meetings using Whisper and ChatGPT."
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
